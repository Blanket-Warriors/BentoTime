{
	"collectCoverageFrom": [ "source/**/*.js{jsx,js}" ],
	"coveragePathIgnorePatters": [ "<rootDir>/node_modules" ],
	"moduleDirectories": [ "node_modules" ],
	"moduleFileExtensions": [ "js", "jsx" ],

	"moduleNameMapper": {
		"^.+\\.(css|scss|sass)$": "<rootDir>/__mocks__/style-mock.js",
		"^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/file-mock.js",
		"^source(.*)": "<rootDir>/source$1"
	},

	"testPathIgnorePatterns": [ "/node_modules/" ]
}
